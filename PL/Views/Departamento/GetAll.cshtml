@model ML.Departamento
@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <h2>Departamentos</h2>
        <p>Agregar, Eliminar, Modificar los Departamentos</p>
    </div>
    <hr />

    <div class="row">
        <div style="float:right">
            @Html.ActionLink("Agregar", "Form", "Departamento", htmlAttributes: new { @class = "btn btn-success" })
        </div>
    </div>
    <hr />

    <div class="row">
        @if (Model.Departamentos != null)
        {
            <table class="table table-bordered table-responsive table-hover">
            <thead>
                <tr>
                    <td class="text-center" style=" font-weight:bold;">Editar</td>
                    
                    <td style="display: none;">IdDepartamento</td>
                    <td class="text-center" style=" font-weight:bold;">Descripción</td>
                    
                    <td class="text-center" style=" font-weight:bold;">Eliminar</td>
                </tr>
            </thead>
            
            <tbody>
                @foreach (ML.Departamento departamento in Model.Departamentos)
                {
                    <tr>
                        
                        <td class="text-center"><a class="btn btn-warning" href="@Url.Action("Form", "Departamento", new { IdDepartamento = departamento.IdDepartamento })"></a></td>
                        
                        <td style="display: none;">@departamento.IdDepartamento</td>
                        <td>@departamento.Descripcion</td>
                        
                        <td class="text-center"><a class="btn btn-danger" href="@Url.Action("Delete", "Departamento", new { IdDepartamento = departamento.IdDepartamento })" onclick="return confirm('Estas seguro que deseas inactivar este registro?');"></a></td>
                    </tr>
                }
            </tbody>
        </table>
        }
    </div>
</div>